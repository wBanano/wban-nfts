{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"lib": ["es2018"],
	"include": ["./src/**.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
